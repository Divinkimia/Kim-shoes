{% for category in categories %}
<tr>
    <td>{{category.id}}</td>
    <td>{{category.name}}</td>
    <td>
    <a class="btn-btn-outline-primar" href="{{path('app_category_update',{'id':category.id})}}">Modifier</a>
    <a onclinck="return confirm('Voulez-vous vraiment supprimer cette catégorie'?)" href="{{path('app_category_delete',{'id':category.id})}}">Supprimer</a>
    </td>
</tr>
{% else %}
<p> Aucune categorie à afficher</p>
{% endfor %}
</table>
<a class="btn btn-outline-sucess" href="{{ path('app_category_new')}}">Nouvelle categorie </a>
</div>

    
